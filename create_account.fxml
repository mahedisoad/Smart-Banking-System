<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CreateAccountController"
      alignment="CENTER" spacing="12">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="ðŸ“ Open New Bank Account" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Account Type:" />
        <ComboBox fx:id="accountTypeBox" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Branch:" />
        <ComboBox fx:id="branchBox" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Currency:" />
        <ComboBox fx:id="currencyBox" prefWidth="200"/>
