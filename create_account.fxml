    </HBox>

    <HBox spacing="10">
        <Label text="Nominee Name:" />
        <TextField fx:id="nomineeField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Mobile Number:" />
        <TextField fx:id="mobileField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
